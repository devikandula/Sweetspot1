{
  "name": "sweetspot-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "admin",
    "branch-admin"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npm run build:all",
    "build:all": "npm run build:client && npm run build:admin && npm run build:branch-admin && npm run combine",
    "build:client": "npm --workspace=client run build",
    "build:admin": "npm --workspace=admin run build",
    "build:branch-admin": "npm --workspace=branch-admin run build",
    "combine": "node combine-builds.js"
  }
}
